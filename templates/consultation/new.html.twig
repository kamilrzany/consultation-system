{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Konsultacja</a>
            </li>
            <li class="breadcrumb-item active">Dodawanie</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                Dodaj nowy termin konsultacji
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            {{ form_label(form.room, 'Sala') }}
                            {{ form_errors(form.room) }}
                            {{ form_help(form.room) }}
                            <div class="input-group">
                                {{ form_widget(form.room, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <div class="input-group">
                                {{ form_row(form.startDate) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <div class="input-group">
                                {{ form_row(form.endDate) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="button-row">
                    <a href="{{ path('consultations') }}" class="btn btn-link">
                        <i class="fa fa-list-alt" aria-hidden="true"></i> Wróć do listy
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save" aria-hidden="true"></i> Stwórz
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
